<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main4"
    tools:context=".ChoosePhoto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200">

        <Button
            android:id="@+id/back"
            style="@style/CustomButtonStyle"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="返回"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/go_next"
            style="@style/CustomButtonStyle"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:text="下一步"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/photo"
        android:layout_width="546dp"
        android:layout_height="380dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/shote" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#DCE775">

        <Button
            android:id="@+id/take_photo"
            style="@style/CustomButtonStyle"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:clickable="true"
            android:text="拍摄"
            android:textSize="20dp" />


        <Button
            android:id="@+id/choose_photo"
            style="@style/CustomButtonStyle2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="相册"
            android:textSize="20dp" />


        <Button
            android:id="@+id/weather"
            style="@style/CustomButtonStyle3"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:text="天气调整"
            android:textSize="20dp" />


        <Button
            android:id="@+id/about"
            style="@style/CustomButtonStyle4"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:text="使用帮助"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>